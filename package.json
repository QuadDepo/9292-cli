{
  "name": "cli-boilerplate-node",
  "description": "Boilerplate to create node node command line interface (CLI) application using ES2017",
  "version": "0.0.1",
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "eslint bin lib src",
    "build:cleanup": "rimraf dist",
    "build": "npm run build:cleanup && babel lib --out-dir dist/lib && babel bin --out-dir dist/bin && babel src --out-dir dist/src",
    "prepublish": "npm run lint && npm run build && npm run changelog",
    "setup": "npm install"
  },
  "main": "./dist/bin/index.js",
  "bin": {
    "cli-boilerplate-node": "./dist/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sun1l/cli-boilerplate-node.git"
  },
  "keywords": [
    "cli",
    "boilerplate",
    "cli boilerplate",
    "node cli boilerplate"
  ],
  "author": {
    "name": "Sunil Kumar",
    "url": "https://twitter.com/sun1lkumar"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sun1l/cli-boilerplate-node/issues"
  },
  "homepage": "https://github.com/sun1l/cli-boilerplate-node#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "inquirer": "^3.0.6",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-preset-latest": "^6.24.0",
    "babel-preset-stage-2": "^6.22.0",
    "conventional-changelog-cli": "^1.3.1",
    "eslint": "^3.18.0",
    "rimraf": "^2.6.1"
  }
}
